<%= form_tag(search_path, :method => "get", :style=>"margin: 5px 0 0 0") do %>
	<%= text_field_tag(:q, nil, :placeholder => "search") %>
	<%= submit_tag("Search") %>
<% end %>

<%= will_paginate @links %>
<!-- Here are all the links that matched "<%= params[:q] %>" -->
<ul>
  <% @links.each do |link| %>
    <li><%= link.title %>
    <%= link.votes.count %>
    <% if current_user && current_user.votes.where(:link_id => link.id).present? %>
    *
    <% else %>
    	<%= link_to "+", votes_path(:vote => {:link_id => link.id}), :method => :post %>
    <% end %>
    <a href=<%=link.url%>> <%= link.url%></a>
    </li>
  <% end %>
</ul>	

