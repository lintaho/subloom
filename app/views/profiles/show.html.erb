<div class="container">
	<div class ="row">
		<div class="span6 offset3">
			<h3>Welcome <%= @profile.user.email %>
				<%= @profile.last_name %> 
			</h3>
			<p>Born: <%= @profile.birthday %>
			About: <%= @profile.bio %></p>
			Saved Links:
			<% if @saved_links && @saved_links.any? %>
			<% @saved_links.each do |sl| %>
			<%= link_to sl.title, link_path(sl.id) %>
			<% end %>
			<% end %>

			<% if current_user == @user %>
			<div>
				<%= link_to "Edit profile", edit_profile_path, class:"btn btn-large"%>
			</div>
			<% end %>
			<div>
				<%= render 'users/followstats' %>
			</div>
		</div>
	</div>
</div>